<div class="container">
  <div class="row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <h2>Editing Book</h2>

    <%= form_with model: @user, method: :patch do |f| %>
      <h4>Title</h4>
      <%= f. text_field :title %>


      <h4>Opinion</h4>
      <%= f. text_area :introduction %>
      </br>
      <%= f. submit 'Update Book', class:"btn btn-sm btn-success btn-block-auto" %>
    <% end %>
    <td>
          <%= link_to 'show', book_path(@book) %> |
          <%= link_to 'back', books_path %>
        </td>
    </div>
  </div>
</div>